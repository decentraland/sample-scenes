<a-scene>

  <a-system src="scene.js">

    <!-- local video -->
    <a-text position="2.5 3.8 1" font="fonts/dejavu-sdf.fnt" value="Local"></a-text>
    <a-video id="video-local" position="2.5 2 1" width="4" height="2.5" src="video/big-buck-bunny.mp4" color="#fff" play="false" volume="50"></a-video>

    <!-- simple volume ui -->
    <a-entity id="volume-ui" position="2.5 3.5 1">
      <a-plane id="volume-plus" position="1 0 0" material="src: images/plus.png; transparent: true" width="0.2" height="0.2"></a-plane>
      <a-text position="-0.2 0 0" font="fonts/dejavu-sdf.fnt" value="Volume: "></a-text>
      <a-text id="volume-value" position="0.5 0 0" font="fonts/dejavu-sdf.fnt" value="50"></a-text>
      <a-plane id="volume-minus" position="-0.5 0 0" material="src: images/minus.png; transparent: true" width="0.2" height="0.2"></a-plane>
    </a-entity>

    <!-- simple playback ui -->
    <a-entity id="playback-ui" position="2.5 0.3 1">
      <a-plane id="play" material="src: images/play.png; transparent: true" width="0.6" height="0.6"></a-plane>
      <a-plane id="pause" material="src: images/pause.png; transparent: true" width="0.6" height="0.6" visible="false"></a-plane>
    </a-entity>

    <!-- external video -->
    <a-text position="7.5 3.8 1" font="fonts/dejavu-sdf.fnt" value="External"></a-text>
    <a-video id="video-external" position="7.5 2 1" width="4" height="2.5" src="http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4" color="#c7c7c7" play="false"></a-video>
  </a-system>
</a-scene>
